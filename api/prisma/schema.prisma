generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  ADMIN
}

model User {
  id        String         @id @unique @default(uuid())
  email     String         @unique
  password  String 
  firstName String
  lastName  String
  role      Role           @default(CUSTOMER)
  server    UserOnServer[]
}

model Server {
  id       String         @id @unique @default(uuid())
  name     String         @unique
  ram      String
  cpuCores String
  storage  String
  user     UserOnServer[]
}

model UserOnServer {
  server     Server   @relation(fields: [serverId], references: [id])
  serverId   String
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([userId, serverId])
}
