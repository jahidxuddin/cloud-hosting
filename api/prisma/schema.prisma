generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  ADMIN
}

model User {
  id            String         @id @unique @default(uuid())
  firstName     String
  lastName      String
  email         String         @unique
  password      String
  role          Role           @default(CUSTOMER)
  credits       Decimal        @default(0)
  server        UserOnServer[]
  notifications Notification[]
}

model Server {
  id      String         @id @unique @default(uuid())
  name    String         @unique
  ram     String
  cpu     String
  storage String
  price   Decimal
  status  Boolean        @default(false)
  user    UserOnServer[]
}

model UserOnServer {
  server     Server   @relation(fields: [serverId], references: [id])
  serverId   String
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([userId, serverId])
}

model Notification {
  id         String   @id @unique @default(uuid())
  content    String
  createdtAt DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
}
